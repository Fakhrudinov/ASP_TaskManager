<UserControl x:Class="WpfApp_MetricsVisualisation.ChartControls.ChartRam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:WpfApp_MetricsVisualisation.ChartControls" d:DataContext="{d:DesignInstance Type=local:ChartRam}"
             mc:Ignorable="d" Height="350" Width="500">
    <Grid Height="350" Width="500" >
        <Grid>
            <lvc:CartesianChart Name="TimePowerChart" Series="{Binding LineSeriesValues}" LegendLocation="Top" DisableAnimations="True">
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="RAM metric - size of available system memory "></lvc:Axis>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Time" Labels="{Binding Labels}" LabelsRotation="-8"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
            </lvc:CartesianChart>
        </Grid>
    </Grid>
</UserControl>
